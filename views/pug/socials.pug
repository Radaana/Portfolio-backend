

ul.socials
    //- each social in ['vk', 'github', 'in' ]
    li.socials__item
        a.socials__link.socials__link--vk(href="#" title="Моя страница Вконтакте")
            svg.svg.socials__svg(width="31" height="17")
                use(xlink:href="img/sprite.svg#vk")
    li.socials__item
        a.socials__link.socials__link--github(href="#"  title="Моя страница GitHub")
            svg.svg.socials__svg(width="26" height="22")
                use(xlink:href="img/sprite.svg#github")
    li.socials__item
        a.socials__link.socials__link--in(href="#"  title="Моя страница LinkedIn")
            svg.svg.socials__svg(width="24" height="22")
                use(xlink:href="img/sprite.svg#in")
